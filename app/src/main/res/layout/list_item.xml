<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/raund_for_item"

    >


    <TextView
        android:id="@+id/expandedListItem"
        android:textColor="@color/black_may"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:layout_gravity="center"
        android:textSize="17dip"
        android:fontFamily="@font/nanumothic"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft" ></TextView>

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/expandedListItem"
        android:focusable="false"
        android:layout_gravity="center|right"
        android:paddingRight="50dp"
        android:layout_marginRight="15dp"></CheckBox>


</FrameLayout>